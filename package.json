    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "node-config": "^0.0.2",
    "node-gyp": "^9.4.1",
    "nodemon": "^3.1.10",
    "pm2": "^5.4.3",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
